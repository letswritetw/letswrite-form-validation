      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer','GTM-PGQ9WQT');
  body

    // Google Tag Manager (noscript)
    noscript
      iframe(src="https://www.googletagmanager.com/ns.html?id=GTM-PGQ9WQT", height="0", width="0", style="display:none;visibility:hidden")
    
    #app.prose.mx-auto(class="px-4 sm:px-0")
      .py-4.text-center
        h1.mb-2 表單驗證
          small.block.pt-2.text-base 中文姓名、身分證、手機載具、生日、信箱、手機、選擇縣市
        h6 筆記文：
          a.link.link-secondary(href="https://www.letswrite.tw/letswrite-form-validation/", target="_blank") Let's Write
        hr.my-1
      
      div.text-center

        //- 中文姓名
        .mx-auto.mb-8.max-w-sm.w-full
          .form-control.w-full
            label.label
              span.label-text 中文姓名
            input(id="js_name", type="text",
                  class="input input-bordered w-full focus:input-primary",
                  placeholder="這欄只能填寫中文")

        //- 身分證字號
        .flex.items-end.mx-auto.mb-8.max-w-sm.w-full
          div(class="w-3/4")
            .form-control
              label.label
                span.label-text 身分證字號（字首自動大寫）
                span#js_id_helper.badge(class="empty:hidden")
              input(id="js_id", type="text",
                    class="input input-bordered w-full uppercase focus:input-primary",
                    placeholder="這欄會驗證身分證格式是否正確")
          div(class="w-1/4 pl-4")
            a#js_check_id.btn.btn-primary.w-full(href="") 驗證
        
        //- 手機載具
        .flex.items-end.mx-auto.mb-8.max-w-sm.w-full
          div(class="w-3/4")
            .form-control
              label.label
                span.label-text 手機載具（字母自動大寫）
                span#js_phoneId_helper.badge(class="empty:hidden")
              input(id="js_phoneId", type="text",
                    class="input input-bordered w-full uppercase focus:input-primary",
                    placeholder="這欄會驗證手機載具格式是否正確")
          div(class="w-1/4 pl-4")
            a#js_check_phoneId.btn.btn-primary.w-full(href="") 驗證
        
        //- 生日
        .mx-auto.mb-8.max-w-sm.w-full
          .form-control.w-full
            label.label
              span.label-text 生日
            input(id="js_birthday", type="text",
                  class="input input-bordered w-full focus:input-primary",
                  placeholder="這欄只能選擇日期",
                  readonly, inputmode="none")
        
        //- E-mail
        .flex.items-end.mx-auto.mb-8.max-w-sm.w-full
          div(class="w-3/4")
            .form-control
              label.label
                span.label-text E-mail
                span#js_email_helper.badge(class="empty:hidden")
              input(id="js_email", type="email",
                    class="input input-bordered w-full focus:input-primary",
                    placeholder="這欄會驗證 email 格式是否正確",
                    inputmode="email")
          div(class="w-1/4 pl-4")
            a#js_check_email.btn.btn-primary.w-full(href="") 驗證
        
        //- 手機
        .flex.items-end.mx-auto.mb-8.max-w-sm.w-full
          div(class="w-3/4")
            .form-control
              label.label
                span.label-text 手機：0912345678（限 10 碼）
                span#js_phone_helper.badge(class="empty:hidden")
              input(id="js_phone", type="tel",
                    class="input input-bordered w-full focus:input-primary",
                    placeholder="這欄會驗證手機是否正確",
                    inputmode="tel")
          div(class="w-1/4 pl-4")
            a#js_check_phone.btn.btn-primary.w-full(href="") 驗證
        
        //- 地址
        .mx-auto.mb-8.max-w-sm.w-full
          .form-control.w-full
            label.label
              span.label-text 選擇縣市
          .twzipcode.flex
            div(class="w-1/3 pr-1")
              div(data-role="county")
            div(class="w-1/3 px-1")
              div(data-role="district")
            div(class="w-1/3 pl-1")
              div(data-role="zipcode")

      hr

    script(src="dist/twzipcode.min.js")
    script(src="dist/main.min.js")
